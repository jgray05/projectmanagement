<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>

    <% if can? :read, user %>
      <td><%= link_to 'Show', user %></td>
    <% end %>

    <% if can? :manage, user %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>

    <% if can? :manage, user %>
      <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  
  </tr>
<% end %>
</table>

