<!DOCTYPE html>
<html>
<head>
  <title>Projectmanagement</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Begin Wrapper -->
<div id="wrapper">

<!-- Begin Header -->
<div id="header">

	<%= image_tag("header.jpg", :alt => "Header") %>		 

<!-- End Header -->
</div>

<!-- Begin Naviagtion -->
<div id="navigation">

<% if current_user %>
	<%= link_to "Home", root_path %>
	<%= link_to "Edit Profile", edit_user_path(:current) %>
	<%= link_to "Repair Request", repair_requests_path %>
	<%= link_to "Leases", leases_path %>
	<%= link_to "Logout", logout_path %>
<% else %>
	<%= link_to "Register", new_user_path %>
	<%= link_to "Login", login_path %>
<% end %>

<!-- End Naviagtion -->
</div>

<!-- Begin Content -->
<div id="content">

	<% if flash[:error] -%>
		<div id='error'><%=h flash[:error] %></div>
	<% end -%>
	<% if flash[:notice] -%>
	<div id='notice'><%=h flash[:notice] %></div>
	<% end -%>

<%= yield %>

<!-- End Content -->
</div>

<!-- Begin Footer -->
<div id="footer">

	Copyright 2013 Cutty Strengh, Inc.		

<!-- End Footer -->
</div>

<!-- End Wrapper -->
</div>
</body>
</html>